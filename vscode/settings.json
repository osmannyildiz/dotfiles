{
	"window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.untitled.hint": "hidden",
	"editor.renderWhitespace": "boundary",
	"editor.roundedSelection": false,
	"editor.cursorSmoothCaretAnimation": true,
	"editor.renderLineHighlight": "all",
	/* BEHAVIOR */
	"workbench.startupEditor": "none",
	"editor.copyWithSyntaxHighlighting": false,
	"editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
	"explorer.compactFolders": false,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/__pycache__": true
	},
	/* HINTS */
	"editor.parameterHints.cycle": true,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	/* INDENTATION */
	"editor.detectIndentation": false,  // use manual values for editor.tabSize and editor.insertSpaces
	// editor.tabSize is 4 by default
	"editor.insertSpaces": false,  // use tabs by default
	/* MINIMAP */
	"editor.minimap.size": "fit",
	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	"editor.minimap.maxColumn": 80,
	/* PYTHON EXTENSION */
	// "python.defaultInterpreterPath": "python3",
	"python.pythonPath": "/usr/bin/python3",
	"python.autoComplete.addBrackets": true,
	"python.showStartPage": false,
	"python.analysis.completeFunctionParens": true,
	/* LANGUAGE-SPECIFIC */
	"[python]": {
		"editor.insertSpaces": true,
		"files.trimTrailingWhitespace": true,
		// following 2 lines ensure that there will be exactly one \n at the end of the file
		"files.trimFinalNewlines": true,
		"files.insertFinalNewline": true,
	},
	"[html]": {
		"editor.tabSize": 2,
	},
	"[css]": {
		"editor.tabSize": 2,
	},
	"[javascript]": {
		"editor.tabSize": 2,
	},
	"[dart]": {
		"editor.formatOnSave": true,
		"editor.formatOnType": true,
		"editor.rulers": [
			80
		],
		"editor.selectionHighlight": false,
		"editor.suggest.snippetsPreventQuickSuggestions": false,
		"editor.suggestSelection": "first",
		"editor.tabCompletion": "onlySnippets",
		"editor.wordBasedSuggestions": false
	},
	"workbench.editorAssociations": [
		{
			"viewType": "jupyter.notebook.ipynb",
			"filenamePattern": "*.ipynb"
		}
	],
}